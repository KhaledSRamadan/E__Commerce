<%- include('./_header.ejs') %>

<div class="col-md-8">
 
    <div class="panel panel-default">
 
        <div class="panel-heading">
            <h3>Edit Item</h3>
        </div>
        <div class="panel-body">
            <form class="form-signin" method="POST" action="/edit">
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">Item ID</span>
                    <input type="text" class="form-control" value=<%= result._id %> placeholder="Item ID" name="ItemID" aria-describedby="basic-addon1" readonly>
                </div>
                <br />
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">@</span>
                    <input type="text" class="form-control" value=<%= result.Name %> placeholder="Item Name" name="ItemName" aria-describedby="basic-addon1">
                </div>
                <br />
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">#</span>
                    <input type="text" class="form-control" value=<%= result.SN %> placeholder="Sreial Number" name="SN"
                        aria-describedby="basic-addon1">
                </div>
                <br />
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">#</span>
                    <input type="Number" name="Price" class="form-control" value=<%= result.Price %> placeholder="Price" aria-describedby="basic-addon1">
                </div>
                <br />
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">@</span>
                    <input type="text" class="form-control" placeholder="Description" value=<%= result.DString %>
                        aria-describedby="basic-addon1" name="DText">
                </div>
 
                <input type="submit" class="btn btn-default navbar-btn" value="Edit item" />
 
            </form>
        </div>
    </div>
</div>
 


<%- include('./_footer.ejs') %>