<%- include('./_header.ejs') %>

<div class="col-md-8">
 
    <div class="panel panel-default">
 
        <div class="panel-heading">
            <h3>Add Credit</h3>
        </div>
        <div class="panel-body">
            <form class="form-signin" method="POST" action="/addcredit">
            
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">Name on Card</span>
                    <input type="text" class="form-control" placeholder="CardHolder" name="CardHolder" aria-describedby="basic-addon1">
                </div>
                <br />
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">Card Number</span>
                    <input type="text" class="form-control" placeholder="CNumber" name="CNumber"
                        aria-describedby="basic-addon1">
                </div>
                <br />
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-lock"
                            aria-hidden="true"></span></span>
                    <input type="password" name="CVV" class="form-control" placeholder="CVV" aria-describedby="basic-addon1">
                </div>
                <br />
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">Credit</span>
                    <input type="date" class="form-control" placeholder="MM/YY"
                        aria-describedby="basic-addon1" name="Ex_Date">
                </div>
                <br />
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">Credit</span>
                    <input type="number" class="form-control" placeholder="Credit" name="Credit"
                        aria-describedby="basic-addon1">
                </div>
                <br />
 
                <input type="submit" class="btn btn-default navbar-btn" value="Add Credit" />
 
            </form>
        </div>
    </div>
</div>
 


<%- include('./_footer.ejs') %>